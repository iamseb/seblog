div.content.post iframe {
  width: 100% !important;
  min-height: 400px !important; }

div.content.page img {
  width: auto !important;
  height: auto !important; }

div.content.page iframe {
  width: auto !important;
  height: auto !important; }

nav {
  transition: all .4s !important;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  color: #fff; }

nav.transparent {
  box-shadow: none;
  transition: all .4s !important;
  color: #222;
  vertical-align: top; }

nav h1 {
  max-height: 0;
  overflow: hidden;
  color: transparent;
  margin-top: 0;
  margin-bottom: 0;
  padding: 0 0.3em;
  transition: all .4s !important; }

nav.transparent h1 {
  color: #222;
  max-height: 200px;
  overflow: visible;
  transition: all .4s !important; }

nav .brand, nav .menu, nav .burger {
  top: 50%;
  float: right;
  position: relative;
  transform: translateY(-50%); }

nav a.brand {
  color: #ED8A2E; }

nav .brand {
  float: left;
  max-width: 50%;
  padding: 0 0.6em;
  white-space: nowrap; }

nav.transparent a {
  color: #ED8A2E; }

nav .pseudo.button {
  color: #fff; }

nav .pseudo.button:hover {
  background: #ED8A2E; }

nav.transparent .pseudo.button {
  color: #fff; }

nav.transparent .pseudo.button:hover {
  background: #ED8A2E; }

nav div.brand-flex {
  background: rgba(16, 16, 16, 0.9);
  height: 3em;
  transition: all .4s !important; }

nav.transparent div.brand-flex {
  background: #202020;
  height: 3em;
  transition: all .4s !important; }

.burger {
  display: none; }

@media all and (max-width: 800px) {
  
  nav .menu {
    color: #333; } 
}

div.content.post {
  background: #fff;
  border-radius: 2px;
  padding: 1em;
  padding-top: 0;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), transparent 0 0 0, transparent 0 0 0, transparent 0 0 0, transparent 0 0 0;
  margin-bottom: 2em; }

main {
  margin-top: 3em;
  padding-left: 2em; }

div.sidebar {
  padding-top: 3em; }

nav .show:checked ~ .burger {
  color: transparent;
  width: 100%;
  border-radius: 0;
  background: rgba(0, 0, 0, 0.2) !important;
  transition: all .3s ease; }

nav .show:checked ~ .menu .button {
  color: #222 !important; }

div.pagination div:first-child {
  text-align: right; }

    </style>
    </head>

